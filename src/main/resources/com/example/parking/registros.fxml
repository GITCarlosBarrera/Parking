<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.parking.RegistrosController"
      styleClass="contenedor">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Matricula:" contentDisplay="RIGHT" styleClass="label">
        <graphic>
            <TextField fx:id="matriculaTF" promptText="1111-AAA" styleClass="campo-texto"/>
        </graphic>
    </Label>

    <Button text="Registrar" onAction="#buscarMatricula" styleClass="boton-menu"/>
</VBox>
